<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0D67C4"/><!--this is the color when btn is clicked-->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/btn_blue"/> <!--this is default button color-->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>